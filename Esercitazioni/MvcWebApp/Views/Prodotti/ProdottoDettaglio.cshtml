@model Prodotto

@{
    ViewData["Title"] = Model.Nome;  // Usare direttamente Model.Nome
}

<h1>@ViewData["Title"]</h1> 

<div class="table-responsive">
    @if (Model != null)  // Controllo se Model è nullo
    {
     <table class="table">
        <thead>
            <tr>
                <th>Immagine</th>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Dettaglio</th>
                <th>Quantita</th>
                <th>Categoria</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td data-label="Immagine"><img src="~/@Model.Immagine" alt="@Model.Nome" width="300" height="300" /></td>  <!-- Mostra l'immagine -->
                <td data-label="Nome">@Model.Nome</td>
                <td data-label="Prezzo">@Model.Prezzo</td>
                <td data-label="Dettaglio">@Model.Dettaglio</td>
                <td data-label="Quantita">@Model.Quantita</td>
                <td data-label="Categoria">@Model.Categoria</td>
            </tr>
        </tbody>
    </table>
    }
    else
    {
        <!-- Mostra un messaggio di errore se il prodotto non è disponibile -->
        <p>Il prodotto non è stato trovato.</p>
    }
    
    <a asp-action="Index">Torna a prodotti</a> <!-- Usa asp-action per puntare al controller Index -->
</div>
