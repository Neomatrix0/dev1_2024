@page
@model AggiungiProdottoModel
@{
    ViewData["Title"] = "AggiungiProdotto";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post"> <!-- importante -->
        <div class="form-group" <label for="nome">Nome</label>
            <input type="text" class="form-control" name="nome" />


        </div>

        <div class="form-group mb-3" <label for="prezzo">Prezzo</label>
            <input type="text" class="form-control" name="prezzo" />


        </div>

        <div class="form-group" <label for="dettaglio">Dettaglio</label>
            <input type="text" class="form-control" name="dettaglio" />


        </div>

        <div class="form-group" <label for="immagine">Immagine</label>
            <input type="text" class="form-control" name="immagine" />

            <div class="form-group" <label for="quantita">Quantita</label>
                <input type="text" class="form-control" name="quantita" />

                <div class="form-group" <label for="categoria">Categoria</label>
                    <!--<input type="text" class="form-control" name="categoria"/> -->
                    <select class="form-control" name="categoria">
                        <option value="">Seleziona categoria</option>
                        @foreach (var categoria in Model.Categorie)
                        {
                            <option value="@categoria">@categoria</option>
                        }
                    </select>


                </div>


                <div class="form-group" <label asp-for="Codice"> </label>
                    <input asp-for="Codice" class="form-control" />

                    <span asp-validation-for="Codice" class="text-danger"></span>

                </div>

                <button type="submit" class="btn btn-dark">Aggiungi</button>


    </form>


</div>