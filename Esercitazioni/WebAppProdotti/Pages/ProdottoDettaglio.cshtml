@page
@model ProdottoDettaglioModel

@*@{
    ViewData["Title"] = "ProdottoDettaglio";
}  *@--
@{
    // Se il prodotto esiste, imposta il titolo come il nome del prodotto
    ViewData["Title"] = Model.prodotto?.Nome ?? "Prodotto non trovato";
}

<h1>@ViewData["Title"]</h1> 

<div class="table-responsive">
    @if (Model.prodotto != null)
    {
     <table class="table">
        <thead>
            <tr>
                <th>Immagine</th>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Dettaglio</th>
                <th>Quantita</th>
                <th>Categoria</th>
               
            </tr>
        </thead>
        <tbody>
       
                <tr>
                    <td><img src="~/@Model.prodotto.Immagine" alt="@Model.prodotto.Nome" width="300" height="300" /></td>  <!-- Mostra l'immagine -->
                    <td>@Model.prodotto.Nome</td>
                    <td>@Model.prodotto.Prezzo</td>
                    <td>@Model.prodotto.Dettaglio</td>
                      <td>@Model.prodotto.Quantita</td>
                    <td>@Model.prodotto.Categoria</td>
                </tr>
            
        </tbody>
    </table>

       }
    else
    {
        <!-- Mostra un messaggio di errore se il prodotto non è disponibile -->
        <p>Il prodotto non è stato trovato.</p>
    }
    
    <a asp-page="/Prodotti">Torna a prodotti</a>
</div>
